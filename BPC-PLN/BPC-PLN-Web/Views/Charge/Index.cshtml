@using static BPC_PLN_Web.Controllers.ChargeController
@model List<Employee>
@{
    ViewData["Title"] = "Home";
}
<style>
    input {
        width: 100%;
        padding: 3.5px;
        border: none;
        background: transparent;
        text-align: center;
        font-size: 16px;
        transition: 0.3s;
    }

        input:focus {
            border: 2px solid #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5); 
            border-radius: 5px;
        }


    #saveBtn {
        margin-top: 15px;
        padding: 10px 20px;
        background-color: #28a745; /* رنگ سبز */
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

        #saveBtn:hover {
            background-color: #218838;
        }

    /* تیره کردن سرستون‌ها */
    thead th {
        background-color: #343a40; /* رنگ تیره */
        color: white;
    }

    /* استایل جدول */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    /* استایل pagination */
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 15px;
    }

    thead th {
        background-color: #212529 !important; /* رنگ تیره‌تر */
        color: white !important; /* متن سفید */
        padding: 10px;
    }
        .pagination button {
            padding: 8px 15px;
            border: none;
            background: #007bff;
            color: white;
            margin: 3px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            .pagination button:hover {
                background: #0056b3;
            }

    .hidden {
        display: none;
    }
</style>


<table class="table table-bordered border-primary">
    <thead>
        <tr>
            <th>#</th>
            <th>نام</th>
            <th>سن</th>
            <th>شغل</th>
            <th style="width:250px">حقوق</th>
            <th style="width:150px">امتیاز</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Age</td>
                <td>@emp.Job</td>
                <td><input type="text" class="salary" data-id="@emp.Id" value="@emp.Salary" /></td>
                <td><input type="text" class="score" data-id="@emp.Id" value="@emp.Score" /></td>
            </tr>
        }
    </tbody>
</table>

<button id="saveBtn">ذخیره</button>

<div class="pagination">
    <button onclick="changePage(-1)">قبلی</button>
    <span id="pageIndicator">صفحه 1</span>
    <button onclick="changePage(1)">بعدی</button>
</div>

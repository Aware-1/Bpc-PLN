@inherits GridManualDispatchComponent


<EditForm Model="dispatchVM" OnSubmit="HandleSubmit">
    <div class="container mt-4">
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th class="col-1">کد کالا</th>
                        <th class="col-6">شرح کالا</th>
                        <th class="col-1">@GetBranchColumnHeader()</th>
                        <th class="col-1">نام شعبه</th>
                        <th class="col-3">تن (ناخالصی)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dispatch in DispatchList)
                    {
                        <tr>
                            <td><input @onchange="FetchProductName" type="text" class="form-control" /></td>
                            <td>@FetchedProductName</td>
                            <td>
                                <input @bind="Value" @bind:event="oninput" @onchange="FetchName"
                                disabled="@IsBranchInputDisabled()" type="text" class="form-control" />
                            </td>
                            <td>@FetchedName</td>
                            <td>...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-4">ارسال</button>
        </div>
    </div>
</EditForm>


